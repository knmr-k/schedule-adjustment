<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", model: f.object %>
  <label>email</label><br>
  <%= f.email_field :email, class:"", id:"email" %>
  <br>
  <label>password</label><br>
  <%= f.password_field :password, class:"", id:"password" %>
  <br>
  <label>Password confirmation</label><br>
  <%= f.password_field :password_confirmation, class:"", id:"password_confirmation" %>
  <br>
  <label>name</label><br>
  <%= f.text_field :name, class:"", id:"name" %>
  <br>
  <label>admin-flag</label>
  <%= f.check_box :admin, {}, "true", "false" %>
  <br>
  <%= f.submit "Sign up" ,class:"" %>
<% end %>


<%= render "devise/shared/links" %>
